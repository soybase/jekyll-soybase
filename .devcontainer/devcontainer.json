{
    "name": "GitHub Codespace dev container",
    "customizations": {
        "vscode": {
            "extensions": [
                "redhat.vscode-yaml",
                "sissel.shopify-liquid"
            ],
            "settings": {
                "files.associations": {
                    "*.html": "liquid"
                },
                "yaml.format.enable": true,
                "yaml.format.proseWrap": "never"
            }
        }   
    },
    "postCreateCommand": "",
    "portsAttributes": {
        "4000": {
            "label": "jekyll",
            "onAutoForward": "openPreview"
        }
    }
}

Bootstrap: docker
From: mcr.microsoft.com/devcontainers/jekyll:2.0.0-3.2-bookworm

%post
     gem install -v 1.4.0 jekyll-datapage-generator
     gem install -v 5.0.7 html-proofer

     apt update
     apt install -y --no-install-recommends -o APT::Sandbox::User=root npm
     rm -rf /var/lib/apt/lists/*

     npm install -g @jbrowse/cli@2.6.2


%runscript
    exec jekyll "$@"
